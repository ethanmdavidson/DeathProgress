<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="Theme.LifeProgressWallpaper" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/purple_500</item>
		<item name="colorPrimaryVariant">@color/purple_700</item>
		<item name="colorOnPrimary">@color/white</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/teal_200</item>
		<item name="colorSecondaryVariant">@color/teal_700</item>
		<item name="colorOnSecondary">@color/black</item>
		<!-- Status bar color. -->
		<item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
		<!-- Customize your theme here. -->
	</style>

	<style name="Theme.LifeProgressWallpaper.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="SpinnerDatePickerDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
		<item name="android:datePickerStyle">@style/SpinnerDatePicker</item>
		<item name="android:background">?attr/colorBackgroundFloating</item>
		<item name="android:dialogCornerRadius" tools:targetApi="28">4dp</item>
	</style>

	<style name="SpinnerDatePicker" parent="@android:style/Widget.DatePicker">
		<item name="android:calendarViewShown">false</item>
		<item name="android:datePickerMode">spinner</item>
	</style>
</resources>
